<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/bootstrap.css">
    <link rel="stylesheet" href="css/font-awesome.min.css">
    <link rel="stylesheet" href="css/prism-okaidia.css">
    <link rel="stylesheet" href="css/custom.min.css">
    <!-- Global Site Tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-23019901-1"></script>
    <title>Document</title>
</head>
<body class="pt-0">
    <%- include('./partials/header'); %>
    <main class="m-auto" style="width: 40%;">
        <h1>
            Crear Cuenta Bancaria
        </h1>
        <form action="/cuenta" method="POST">
            <div class="form-group">

                <div class="form-floating mb-3">
                    <input type="number" class="form-control" id="floatingInput" name="cliente">
                    <label for="floatingInput">Cedula cliente</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="number" class="form-control" id="floatingInput" name="saldo">
                    <label for="floatingInput">saldo</label>
                </div>
                <div class="form-floating mb-3">
                    <input type="date" class="form-control" id="floatingInput readOnlyInput" name="fecha" value="<%= moment().format('YYYY-MM-DD'); %>" placeholder="Readonly input here..." readonly="">
                    <label for="floatingInput">Fecha de creacion</label>
                </div>
                <div class="mb-3">

                    <select class="form-select" id="exampleSelect1" name="tipo">
                        <option>Eliga su Tipo de cuenta</option>
                        <option>Corriente</option>
                        <option>Ahorros</option>

                    </select>
                </div>
                <button class="w-100 btn btn-lg btn-primary mb-5" type="submit">Crear Cuenta</button>

            </div>
        </form>
    </main>
    
    <script src="js/jquery.min.js"></script>
    <script src="js/bootstrap.bundle.min.js"></script>
    <script src="js/prism.js" data-manual></script>
    <script src="js/custom.js"></script>
    <% if(typeof validaciones !='undefined' ){ %>
        <% validaciones.forEach( (validacion) =>{%>
            <div class="alert alert-dismissible alert-primary w-75 m-auto">
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                <strong><%=validacion.msg%></strong>
              </div>
        <% })%>
    <% }%>
    <% if(typeof registrado !='undefined' ){ %>
        <div class="alert alert-dismissible alert-primary w-75 m-auto">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            <strong><%=registrado%></strong>
          </div> 
    <% }%>
</body>
</html>